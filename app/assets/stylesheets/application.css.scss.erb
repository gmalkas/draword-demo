@font-face {
  font-family: "Collegia";
  src: url(<%= asset_path "COLLEGIA.ttf" %>);
}

* {
  margin: 0;
  padding: 0;
}

@font-face {
  font-family: 'Open Sans';
  font-style: normal;
  font-weight: 400;
  src: local('Open Sans'), local('OpenSans'), "<%= asset_path 'OpenSans-Regular.ttf' %>" format('truetype');
}

body {
  background: #f1f1f1 url('<%= asset_path 'introduction-background.png' %>');
  color: #2b2b2b;
  font-family: 'Open Sans', Helvetica, Verdana, sans-serif;

  #introduction {
    margin: auto;
    padding: 2em;
    text-align: center;
  }
  
  #create-room {
    
    text-align: center;

    input[type=text] {
      background: #2B2B2B;
      border: none;
      border-right: none;
      border-radius: 6px;
      color: #FFF;
      display: inline-block;
      font-size: 1.25em;
      padding: .5em;
      margin: 0 .5em;
      width: 25em;
    }

    input[type=text]:focus {
      border: none;
    }
  }
 
  #games {
    border-collapse: collapse;
    margin: 2em auto;
    width: 35em;

    tr {
      border-bottom: 1px dashed #CCC;

      th {
        background: #2B2B2B;
        color: #F0F0F0;
        font: bold 1.25em Helvetica;
        padding: .5em;
        text-shadow: 1px 1px #101010;

        &:first-child {
          border-radius: 4px 0 0 0;
          text-align: left;
        }

        &:last-child {
          border-radius: 0 4px 0 0;
          text-align: right;
        }
      }

      td {
        background-color: #F0F0F4;
        padding: .5em;
      }

      .room {
        a {
          color: #4B4B4B;
          font-size: 1.25em;
          font-family: Collegia;
          text-align: left;
          text-decoration: none;
          text-shadow: 1px 1px #FFF;
          &:hover {
            color: #2F2F2F;

            &:after {
              content: " \2192"
            }
          }
        }
      }

      .players {
        color: #AA8888;;
        font-family: Impact;
        font-size: 1.25em;
        text-align: right;
      }

      &:last-child {
        border-bottom: none;
      }
    }
  }
}
